<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.hy.photopicker">


    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/picker_app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.hy.picker.PictureSelectorActivity"
            android:theme="@style/PickerWhiteTheme"/>
        <activity
            android:name="com.hy.picker.PicturePreviewActivity"
            android:theme="@style/PickerWhiteTheme"/>
        <activity
            android:name="com.hy.picker.PictureEditPreviewActivity"
            android:theme="@style/PickerWhiteTheme"/>
        <activity
            android:name="com.hy.picker.PickerCrystalCategoryActivity"
            android:theme="@style/PickerWhiteTheme"/>
        <activity
            android:name="com.hy.picker.PickerCrystalActivity"
            android:theme="@style/PickerWhiteTheme"/>

        <activity android:name="com.hy.picker.OpenCameraResultActivity"/>

        <activity
            android:name="com.hy.picker.IMGEditActivity"
            android:theme="@style/PickerEditTheme"/>

        <provider
            android:name="com.hy.picker.utils.MyFileProvider"
            android:authorities="${applicationId}.demo.file_provider"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>

        <activity
            android:name="com.hy.crash.CrashErrorActivity"
            android:theme="@style/CrashWhiteTheme"/>

        <activity
            android:name="com.hy.crash.CrashErrorLogListActivity"
            android:theme="@style/CrashWhiteTheme"/>

        <activity
            android:name="com.hy.crash.CrashLogActivity"
            android:theme="@style/CrashWhiteTheme"/>
    </application>

</manifest>