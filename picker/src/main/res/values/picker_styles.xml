<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PickerEditTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="PickerTextDialog" parent="android:Theme.Holo.Dialog">

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowSoftInputMode">stateAlwaysVisible|adjustResize</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>

        <item name="android:windowAnimationStyle">@style/PickerDialogAnimation</item>

    </style>

    <style name="PickerDialogAnimation" parent="android:Animation.Dialog">

        <item name="android:windowEnterAnimation">@anim/picker_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/picker_dialog_exit</item>

    </style>

    <style name="picker_check_box" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">?attr/picker_send_color</item>
        <item name="colorControlActivated">?attr/picker_send_color</item>
    </style>

    <style name="Picker_Apptheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="picker_send_color">#FF6E40</item>
        <item name="picker_title_bg">@color/picker_picsel_toolbar</item>
        <item name="picker_title_color">#ffffff</item>
        <item name="picker_bottom_color">@color/picker_picsel_toolbar_transparent</item>
        <item name="picker_back_color">#ffffff</item>
        <item name="picker_send_color_disable">@color/picker_picsel_toolbar_send_text_disable</item>
        <item name="picker_send_color_enable">@color/picker_picsel_toolbar_send_text_normal</item>
        <item name="picker_preview_color_disable">@color/picker_picsel_toolbar_send_text_disable
        </item>
        <item name="picker_preview_color_enable">#ffffff</item>
        <item name="picker_photo_back">#000000</item>
    </style>


</resources>