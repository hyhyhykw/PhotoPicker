<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PickerEditTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="PickerTextDialog" parent="android:Theme.Holo.Dialog">

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowSoftInputMode">stateAlwaysVisible|adjustResize</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>

        <item name="android:windowAnimationStyle">@style/PickerDialogAnimation</item>

    </style>

    <style name="PickerDialogAnimation" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/picker_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/picker_dialog_exit</item>
    </style>

    <style name="picker_check_box" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">?attr/picker_send_color</item>
        <item name="colorControlActivated">?attr/picker_send_color</item>
    </style>

    <style name="PickerWeChatTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="picker_status_black">false</item><!--是否修改状态栏字体为黑色-->
        <item name="picker_send_color">#FF6E40</item>
        <item name="picker_title_bg">@color/picker_picsel_toolbar</item>
        <item name="picker_title_color">#ffffff</item>
        <item name="picker_bottom_color">@color/picker_picsel_toolbar_transparent</item>
        <item name="picker_back_color">#ffffff</item>
        <item name="picker_send_color_disable">@color/picker_picsel_toolbar_send_text_disable</item>
        <item name="picker_send_color_enable">@color/picker_picsel_toolbar_send_text_normal</item>
        <item name="picker_preview_color_disable">@color/picker_picsel_toolbar_send_text_disable
        </item>
        <item name="picker_grid_span">4</item>

        <item name="picker_preview_color_enable">#ffffff</item>
        <item name="picker_photo_back">#000000</item>

    </style>

    <!--白色主题样式，，注意每一项都不能少-->
    <style name="PickerWhiteTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="picker_status_black">true</item><!--是否修改状态栏字体为黑色-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="picker_send_color">#FF6E40</item>
        <item name="picker_title_bg">@color/picker_color_white</item>
        <item name="picker_title_color">#333</item>
        <item name="picker_bottom_color">#f0ffffff</item>
        <item name="picker_back_color">#333333</item>
        <item name="picker_send_color_disable">@color/picker_picsel_toolbar_send_text_disable</item>
        <item name="picker_send_color_enable">@color/picker_picsel_toolbar_send_text_normal</item>
        <item name="picker_preview_color_disable">@color/picker_picsel_toolbar_send_text_disable
        </item>
        <item name="picker_preview_color_enable">#333</item>
        <item name="picker_grid_span">4</item>
        <item name="picker_photo_back">#fff</item>

    </style>

    <!--QQ数字风格样式，注意每一项都不能少-->
    <style name="PickerQQTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="picker_status_black">false</item><!--是否修改状态栏字体为黑色-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="picker_send_color">#7D7DFF</item>
        <item name="picker_title_bg">#7D7DFF</item>
        <item name="picker_title_color">#fff</item>
        <item name="picker_bottom_color">#f07D7DFF</item>
        <item name="picker_back_color">#fff</item>
        <item name="picker_send_color_disable">@color/picker_picsel_toolbar_send_text_disable</item>
        <item name="picker_send_color_enable">#fff</item>
        <item name="picker_preview_color_disable">@color/picker_picsel_toolbar_send_text_disable
        </item>
        <item name="picker_grid_span">4</item>

        <item name="picker_preview_color_enable">#7D7DFF</item>
        <item name="picker_photo_back">#fff</item>

    </style>

</resources>