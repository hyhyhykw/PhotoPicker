        <item name="picker_preview_color_disable">@color/picker_picsel_toolbar_send_text_disable
        </item>
        <item name="picker_preview_color_enable">#ffffff</item>
        <item name="picker_photo_back">#000000</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

