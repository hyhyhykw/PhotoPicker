<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/picker_color_black"
             android:orientation="vertical">

    <VideoView
        android:id="@id/picker_video_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/picker_color_black"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@id/picker_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/picker_video_back_bg_selector"
        android:src="@drawable/picker_picsel_back_normal"
        android:tint="@color/picker_color_white"
        tools:ignore="ContentDescription"/>

</FrameLayout>