       android:layout_height="match_parent">

    <me.kareluo.imaging.view.IMGView
        android:id="@id/picker_image_canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"/>

    <ViewSwitcher
        android:id="@id/picker_vs_op"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inAnimation="@anim/picker_fade_in"
        android:outAnimation="@anim/picker_fade_out">

        <include layout="@layout/picker_edit_opt_layout"/>

        <include layout="@layout/picker_edit_clip_layout"/>

    </ViewSwitcher>

</merge>