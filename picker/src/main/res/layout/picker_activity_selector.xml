<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/picker_selector_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_optimizationLevel="standard|dimensions">

    <View
        android:id="@id/picker_title_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@id/picker_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_optimizationLevel="dimensions"/>

    <ImageView
        android:id="@id/picker_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/picker_app_name"
        android:foreground="@drawable/picker_foreground"
        android:src="@drawable/picker_picsel_back_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnusedAttribute"
        tools:targetApi="m"/>

    <TextView
        android:id="@id/picker_title"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/picker_back"
        android:gravity="center_vertical"
        android:text="@string/picker_picsel_toolbar"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/picker_back"
        app:layout_constraintTop_toTopOf="@id/picker_back"/>

    <TextView
        android:id="@id/picker_send"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:enabled="false"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/picker_picsel_toolbar_send"
        android:textAllCaps="true"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/picker_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/picker_back"
        tools:ignore="UnusedAttribute"
        tools:targetApi="m"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/picker_photo_grd"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toTopOf="@id/picker_bottom_bg"
        app:layout_constraintTop_toBottomOf="@id/picker_back"
        app:layout_optimizationLevel="dimensions"/>


    <ProgressBar
        android:id="@id/picker_photo_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@drawable/picker_progress_bar"
        app:layout_constraintBottom_toBottomOf="@id/picker_photo_grd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/picker_photo_grd"/>

    <View
        android:id="@id/picker_selector_mask"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/picker_catalog_lst"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@id/picker_catalog_mask"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/picker_picsel_catalog_shadow"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/picker_photo_grd"
        app:layout_constraintTop_toTopOf="@id/picker_photo_grd"/>

    <ListView
        android:id="@id/picker_catalog_lst"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/picker_photo_grd"/>

    <View
        android:id="@id/picker_bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@id/picker_type_text"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:text="@string/picker_picsel_pictype"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@id/picker_preview_type"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:paddingStart="4dp"
        android:paddingTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/picker_type_text"
        app:layout_constraintTop_toTopOf="@+id/picker_type_text"
        tools:ignore="ContentDescription,RtlSymmetry"/>

    <View
        android:id="@+id/line1"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:background="#2A2A2A"
        app:layout_constraintBottom_toBottomOf="@+id/picker_preview_text"
        app:layout_constraintEnd_toStartOf="@+id/picker_preview_text"
        app:layout_constraintTop_toTopOf="@+id/picker_preview_text"/>

    <TextView
        android:id="@id/picker_preview_text"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/picker_picsel_toolbar_preview"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <View
        android:id="@id/picker_bottom_mask"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>