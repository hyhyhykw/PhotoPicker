<?xml version="1.0" encoding="utf-8"?>
<com.hy.picker.view.SquareLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="127dip">

    <ImageView
        android:id="@id/picker_photo_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/picker_app_name"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@id/picker_iv_gif"
        android:layout_width="28dp"
        android:layout_height="15dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/picker_app_name"
        android:src="@drawable/picker_gif"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@id/picker_item_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/picker_sp_grid_mask">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@id/picker_item_checkbox"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:checked="false"
            android:theme="@style/picker_check_box"/>

    </RelativeLayout>


</com.hy.picker.view.SquareLayout>