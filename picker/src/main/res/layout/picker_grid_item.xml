<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@id/picker_photo_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:actualImageScaleType="centerCrop"
        app:fadeDuration="300"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:viewAspectRatio="1"/>

    <ImageView
        android:id="@id/picker_iv_gif"
        android:layout_width="28dp"
        android:layout_height="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/picker_app_name"
        android:src="@drawable/picker_gif"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/picker_photo_image"
        app:layout_constraintStart_toStartOf="parent"/>


    <View
        android:id="@id/picker_item_mask"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/picker_sp_grid_mask"
        app:layout_constraintBottom_toBottomOf="@id/picker_photo_image"
        app:layout_constraintTop_toTopOf="@id/picker_photo_image"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@id/picker_item_checkbox"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:checked="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <View
        android:id="@+id/bg3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#40000000"
        app:layout_constraintBottom_toBottomOf="@id/picker_photo_image"/>

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/picker_app_name"
        android:src="@drawable/picker_video"
        app:layout_constraintBottom_toBottomOf="@id/bg3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bg3"/>


    <TextView
        android:id="@+id/picker_video_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:textColor="@color/picker_color_white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/bg3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/bg3"
        tools:ignore="RelativeOverlap"
        tools:text="20:00"/>


    <androidx.constraintlayout.widget.Group
        android:id="@id/picker_group1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="bg3,iv1,picker_video_time"/>
</androidx.constraintlayout.widget.ConstraintLayout>