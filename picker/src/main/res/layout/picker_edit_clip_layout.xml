<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:weightSum="100"
    tools:showIn="@layout/picker_edit_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:background="@drawable/picker_bg_bottom"
        android:gravity="bottom"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="20dp">

            <ImageButton
                android:id="@id/picker_ib_clip_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="40dp"
                android:background="@null"
                android:contentDescription="@string/picker_cancel"
                android:onClick="onClick"
                android:src="@drawable/picker_btn_cancel" />

            <ImageButton
                android:id="@id/picker_ib_clip_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="40dp"
                android:background="@null"
                android:contentDescription="@string/picker_done"
                android:onClick="onClick"
                android:src="@drawable/picker_btn_ok" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@id/picker_tv_clip_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClick"
                android:text="@string/picker_reset"
                android:textSize="16sp" />

        </FrameLayout>

        <ImageButton
            android:id="@id/picker_ib_clip_rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@null"
            android:contentDescription="@string/picker_rotate"
            android:onClick="onClick"
            android:src="@drawable/picker_btn_rotate" />

    </LinearLayout>

</LinearLayout>
