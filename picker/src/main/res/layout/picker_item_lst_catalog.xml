<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="92dp"
    android:background="@android:color/white">

    <FrameLayout
        android:id="@id/picker_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/picker_picsel_catalog_pic_shadow">

        <ImageView
            android:id="@id/picker_catalog_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@id/picker_image_layout"
        android:layout_toRightOf="@id/picker_image_layout"
        android:orientation="vertical">

        <TextView
            android:id="@id/picker_catalog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DCIM"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@id/picker_catalog_photo_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="42å¼ "
            android:textSize="13sp"/>

    </LinearLayout>

    <ImageView
        android:id="@id/picker_catalog_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/picker_picsel_catalog_selected"
        android:tint="?attr/picker_send_color"/>

</RelativeLayout>